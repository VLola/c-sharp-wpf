<Window x:Class="Project_65.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_65" xmlns:control="clr-namespace:Project_65.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="450" Width="650">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="2" Grid.ColumnSpan="2" Source="{Binding Path=SinopticModel.Logo}"/>
        <Grid Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Grid.RowSpan="4" Grid.ColumnSpan="2" Grid.Column="1" Source="Resources\term.png" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="100" MinHeight="100"/>
            <TextBlock Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="4" Text="{Binding Path=SinopticModel.Temperature}" FontSize="22" HorizontalAlignment="Center"/>
            <Grid Grid.Column="2" Grid.Row="1" Grid.RowSpan="3">
                <Image Source="Resources\term-line.png" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="{Binding Path=SinopticModel.TemperatureView}"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="3" Grid.ColumnSpan="5" Margin="7 2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0">
                <TextBlock Text="ночь" HorizontalAlignment="Center"/>
            </DockPanel>
            <DockPanel Grid.Column="1">
                <Grid Height="Auto" Width="1" Background="Black"/>
                <TextBlock Text="утро" HorizontalAlignment="Center"/>
            </DockPanel>
            <DockPanel Grid.Column="2">
                <Grid Height="Auto" Width="1" Background="Black"/>
                <TextBlock Text="день" HorizontalAlignment="Center"/>
            </DockPanel>
            <DockPanel Grid.Column="3">
                <Grid Height="Auto" Width="1" Background="Black"/>
                <TextBlock Text="вечер" HorizontalAlignment="Center"/>
            </DockPanel>
        </Grid>
        <ListBox Grid.Column="2" Grid.Row="1" HorizontalContentAlignment="Stretch" IsEnabled="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0">
            <ListBoxItem>
                <TextBlock Text="" HorizontalAlignment="Stretch" Margin="0"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="Температура, °C" HorizontalAlignment="Right"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="чувствуется как" HorizontalAlignment="Right"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="Давление, мм" HorizontalAlignment="Right"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="Влажность, %" HorizontalAlignment="Right"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="Ветер, м/сек" HorizontalAlignment="Right"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="Вероятность осадков, %" HorizontalAlignment="Right" TextWrapping="Wrap"/>
            </ListBoxItem>
        </ListBox>
        <control:SinopticView Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="5" Values="{Binding Path=Values}"/>
    </Grid>
</Window>
