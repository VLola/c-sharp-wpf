        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="2" Grid.ColumnSpan="2" Source="{Binding Path=SinopticModel.Logo}"/>
        <Grid Grid.Column="3" Grid.ColumnSpan="5" Margin="7 2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0">
                <TextBlock Text="ночь" HorizontalAlignment="Center"/>
            </DockPanel>
            <DockPanel Grid.Column="1">
                <Grid Height="Auto" Width="1" Background="Black"/>
                <TextBlock Text="утро" HorizontalAlignment="Center"/>
            </DockPanel>
            <DockPanel Grid.Column="2">
                <Grid Height="Auto" Width="1" Background="Black"/>
                <TextBlock Text="день" HorizontalAlignment="Center"/>
            </DockPanel>
            <DockPanel Grid.Column="3">
                <Grid Height="Auto" Width="1" Background="Black"/>
                <TextBlock Text="вечер" HorizontalAlignment="Center"/>
            </DockPanel>
        </Grid>
        <ListBox Grid.Column="2" Grid.Row="1" HorizontalContentAlignment="Stretch" IsEnabled="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBoxItem>
                <TextBlock Text="" HorizontalAlignment="Stretch" Margin="0"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="Температура, °C" HorizontalAlignment="Right"/>
            </ListBoxItem>
            <ListBoxItem>
                <TextBlock Text="чувствуется как" HorizontalAlignment="Right"/>
