                    <control:ProductControl Grid.Column="3" name="KVM-переключатель ATEN CS22U-A7 2-портовый USB" review="44 отзыва" logo_one="/Resources/Items/logo_1.jpg" logo_two="/Resources/Items/logo_2.jpg" price="719 ₴" discount="946 ₴"/>
                    <control:ProductControl Grid.Column="4" name="Монитор 27 Dell S2722DC (210-BBRR) 75Hz  8-Bit " review="14 отзывов" logo_one="/Resources/Items/logo_3.jpg" logo_two="/Resources/Items/logo_4.jpg" price="12499 ₴"/>
                    <control:ProductControl Grid.Column="5" name="Компьютер ARTLINE Gaming X33 v14" review="23 отзыва" logo_one="/Resources/Items/logo_5.png" logo_two="/Resources/Items/logo_6.jpg" price="25299 ₴" discount="27099 ₴"/>
                    <control:ProductControl Grid.Column="6" name="KVM-переключатель ATEN CS22U-A7 2-портовый USB" review="44 отзыва" logo_one="/Resources/Items/logo_1.jpg" logo_two="/Resources/Items/logo_2.jpg" price="719 ₴" discount="946 ₴"/>
                    <control:ProductControl Grid.Column="7" name="Монитор 27 Dell S2722DC (210-BBRR) 75Hz  8-Bit " review="14 отзывов" logo_one="/Resources/Items/logo_3.jpg" logo_two="/Resources/Items/logo_4.jpg" price="12499 ₴"/>
                </Grid>
            </ScrollViewer>
            
        </Grid>
    </ScrollViewer>
</Window>
