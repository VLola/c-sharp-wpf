<Window x:Class="Project_54.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_54" xmlns:control="clr-namespace:Project_54.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Window.Resources>
        <Style TargetType="Label" x:Key="styleLabelBig">
            <Setter Property="FontSize" Value="32"/>
        </Style>
        
    </Window.Resources>
    <ScrollViewer>
        <Grid Margin="50 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Компьютеры и ноутбуки" Style="{StaticResource styleLabelBig}"/>
            <control:ImageControl Grid.Row="1"/>
            <control:FirmsControl Grid.Row="2"/>
            <control:CategoriesControl Grid.Row="3"/>
        </Grid>
    </ScrollViewer>
</Window>
