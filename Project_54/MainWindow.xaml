                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <control:ProductControl Grid.Column="0" name="KVM-переключатель ATEN CS22U-A7 2-портовый USB" review="44 отзыва" logo_one="/Resources/Items/logo_1.jpg" logo_two="/Resources/Items/logo_2.jpg" price="719 ₴" discount="946 ₴"/>
